.vimeo-video
	height 100%
	position fixed
	width 100%
	top 0
	left 0
	opacity 0
	z-index 0
	transition : opacity 0.6s cubic-bezier(0.77, 0, 0.175, 1), z-index 0.8s linear

	&.showed
		opacity 1
		z-index 8000
		
		.vimeo-video-wrapper
			opacity 1

.vimeo-video-background
	height 100%
	position absolute
	width 100%
	background-color black
	opacity 0.8
	
	&:hover
		cursor pointer
	
.vimeo-video-wrapper
	opacity 0
	height 90%
	position absolute
	width 90%
	max-width 960px
	max-height 540px
	background-color black
	align(direction=both)
	transition : opacity 0.6s cubic-bezier(0.77, 0, 0.175, 1) 0.5s