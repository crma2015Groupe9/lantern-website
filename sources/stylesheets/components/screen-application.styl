#screen-application-background-main
	background-color: color.screenApplicationBackground

#screen-application-background-pictos
	.picto
		position: absolute
		transition : right 0.8s ease-in-out, opacity 0.8s ease-in
		
		&.nuage-app-one
			top 25%			
			opacity 0
			right -10%
			
			&.active
				right 7%
				opacity 1
			
			&.unactive
				right 18%
				opacity 0
			
		&.nuage-app-two
			opacity 0
			right -20%
			bottom 35%
			
			&.active
				opacity 1
				right 33%
			
			&.unactive
				right 48%
				opacity 0
		
		&.nuage-app-three
			opacity 0
			right -25%
			top 35%
			
			&.active
				opacity 1
				right 5%
			
			&.unactive
				right 38%
				opacity 0
		
		&.nuage-app-four
			opacity 0
			right -12%
			bottom 37%
			
			&.active
				opacity 1
				right 41%
			
			&.unactive
				right 67%
				opacity 0
				
		&.nuage-app-five
			opacity 0
			right -12%
			top 25%
			
			&.active
				opacity 1
				right 8%
			
			&.unactive
				right 18%
				opacity 0
				
		&.nuage-app-six
			opacity 0
			right -16%
			bottom 32%
			
			&.active
				opacity 1
				right 34%
			
			&.unactive
				right 62%
				opacity 0

.screen-application-ipad
	display block
	span(5/12)
	shift(7/12)
	max-height 100%
	max-width 100%
	width 451px
	height 611px
	align(direction = vertical)
	position: relative

.screen-aplication-ipad-background
	position: absolute
	top 0
	left 0
	max-height 100%
	max-width 100%
	width : size_width.ipadBackground
	height : size_height.ipadBackground
	background-repeat : no-repeat
	background-image : imageNamed('screen-application-ipad-air-background.png')
	background-size : cover
	
.screen-application-ipad-content
	position: absolute
	width : size_width.ipadContent
	height : size_height.ipadContent
	top 45px
	left : ((size_width.ipadBackground - size_width.ipadContent) / 2)
	background-repeat : no-repeat
	background-size : cover
	display none
	
	&.current
		display block
		
	&.ipad-content-pages
		background-image : imageNamed('screen-application-ipad-air-content-pages.jpg')
	&.ipad-content-stories
		background-image : imageNamed('screen-application-ipad-air-content-stories.jpg')
	&.ipad-content-programmation
		background-image : imageNamed('screen-application-ipad-air-content-programmation.jpg')
		
.csstransitions
	.screen-application-ipad-content
		display block
		opacity 0
		transition opacity 0.3s ease-out
		
		&.current
			opacity 1