#screen-team
	color: color.customBlue
	padding-bottom 5%;

	.section-title
		margin-bottom 90px

#screen-team-background-main
	background-color: #FFF
	
#screen-team-background-bottom
	background-color : color.customBlue
	max-height 50px
	top auto
	bottom -50px
	transition bottom 0.3s ease-out
	
	&.showed
		transition bottom 0.4s ease-in-out 0.6s
		bottom 0

#screen-team .teammate
	column(1/4)
	text-align center

	p
		margin-top 20px
		font_base(wigrumRegular, 19)
		text-align center
		line-height 28px

#screen-team .icons
	margin-top 25px
	font-size 0

#screen-team a.social
	display inline-block
	width: 45px
	height: 45px
	margin 0 11px
	background: imageNamed('social-icons.png')

	&.github
		background-position 0 -45px
	&.link
		background-position 0 -90px
	&:hover
		background-position-x -45px


@media screen and (max-width: 720px)
	#screen-team
		.section-title
			margin-bottom: 30px
		.teammate
			margin-top 20px
			span(6/12)
			text-align center